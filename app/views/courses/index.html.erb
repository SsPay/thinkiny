<header>
  <div class="block_header">
    <div>Thinkiny</div>
  </div>
</header>
<%= search_form_for @search do |f| %>
  <div class="field">
    <%= f.label :name_cont, t('course.index.search_courses') %>
    <%= f.text_field :name_cont %>
  </div>
  <div class="actions"><%= f.submit t('course.index.search') %></div>
<% end %>
<section class="second">
  <div class="row justify-content-around">
    <div class="dropright">
      <a class="btn btn-outline-light dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
         data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <%= params[:sort].present? ? params[:sort].humanize : t('course.index.sort.sort_by') %>
      </a>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
        <%= link_to t('course.index.sort.newest'), courses_path(sort: 'All'), class:'dropdown-item' %>
        <%= link_to t('course.index.sort.oldest'), courses_path(sort: 'oldest'), class:'dropdown-item' %>
        <%= link_to t('course.index.sort.popular'), courses_path(sort: 'popular'), class:'dropdown-item' %>
        <%= link_to t('course.index.sort.unpopular'), courses_path(sort: 'unpopular'), class:'dropdown-item' %>
        <%= link_to t('course.index.sort.fresh'), courses_path(sort: 'fresh'), class:'dropdown-item' %>
        <%= link_to t('course.index.sort.in_process'), courses_path(sort: 'in_process'), class:'dropdown-item' %>
        <%= link_to t('course.index.sort.completed'), courses_path(sort: 'completed'), class:'dropdown-item' %>
        <%= link_to t('course.index.sort.rated'), courses_path(sort: 'rated'), class:'dropdown-item' %>
      </div>
    </div>
<!--    <div class="dropdown">-->
<!--      <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink"-->
<!--         data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">-->
        <%#= params[:category_id].present? ? @category.title.titleize : 'All' %>
<!--      </a>-->
<!--      <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">-->
        <%# @categories.each do |category| %>
          <%#= link_to category.title.humanize, courses_path(sort: 'all', category_id: category) ,class:'dropdown-item' %>
        <%# end %>
<!--      </div>-->
<!--    </div>-->
    <div><%= render 'shared/current_users' %></div>
  </div>
</section>
<section class="third">
  <%= render "shared/nearbys" %>
</section>
<section class="fourth">
  <small><%= link_to t("course.index.nearbys"), nearbys_courses_path%></small>
  <div class="offset-1 offset-sm-2 offset-md-2 mt-5">
    <% @courses.each do |course| %>
      <div class="col-10">
        <div class="card">
          <%= link_to course_path(course, lesson_id: course&.lessons&.first&.id), class:"link_on_show_course" do %>
            <div class="card-header">
              <div class="row">
                <div>
                  <h2><%= course.name %></h2>
                  <p class="blockquote-footer"><%= t('user.role.orginizer') %>: <b><%= course.course_users&.find_by(role: 'organizer')&.user&.email %></b></cite></p>
                  </p>
                </div>
                <div class="ml-auto">
                  <% if current_user %>
                    <% if already_joined?(course, current_user) %>
                      <button type="button" class="btn btn-outline-dark" disabled><%= t('course.actions.joinded') %></button>
                      <%= link_to t("course.actions.leave_rating"), course_rating_form_path(course_id: course.id) if completed_course?(course, current_user) %>
                    <% elsif course.status == 'completed' %>
                      <%= t("course.status.completed") %>
                    <% elsif free_places?(course) %>
                      <%= t("course.status.available") %>
                    <% else %>
                      <%= t("course.status.no_places") %>
                    <% end %>
                  <% else %>
                    <%= t("course.status.log_in_first") %>
                  <% end %>
                </div>
              </div>
            </div>
            <div class="card-body">
              <div class="row">
                <div class="col">
                  <% course.categories.each do |category| %>
                    <%= t("category.category") %>: <b><%= category.title %></b>
                  <% end %>
                  <%= t("course.description") %>: <b><%= course.description %></b>
                  <br>
                  <%= t("course.pre_moderation") %>: <b><%= course.pre_moderation %></b>
                  <br>
                  <%= t("course.places") %>: <b><%= course.place_quantities %></b>
                  <%= t("other.free") %>:
                  <%= count_free_places(course) %>
                  <br>
                  <%= t("course.status") %>:
                  <%= course.status&.humanize %>
                  <br>
                  <%= t("other.require_attendance_rate") %>:
                  <%= course.attendance_rate %>
                </div>
                <div class="col">
                  <% if course.logo? %>
                    <%= image_tag course.logo.big_thumb.url %>
                  <% else %>
                    <%= image_tag 'https://www.drillingauction.com/web/upload/store/no-image.png',
                                  size: '400x250' %>
                <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</section>
<footer class="text-center p-2">bla bla bla</footer>
