<div class="container">
  <h1><%= t("password.reset_password") %></h1>

  <%= form_tag reset_passwords_path, method: :post do %>
    <div class="form-group">
      <%= label_tag :email %>
      <%= text_field_tag :email, nil, class: 'form-control', required: true %>
    </div>

    <%= submit_tag t("password.send_instructions"), class: 'btn btn-primary btn-lg' %>
  <% end %>
</div>
