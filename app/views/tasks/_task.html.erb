<% @lesson.tasks.each do |task| %>
  <div class="mt-1 task_container col-10 offset-1">
    <h5 class="text-center"><%= task.title %> </h5>
    <div class="row">
      <div class="col-10 offset-1 task_body"><%= task.body %></div>
      <div class="col-1">
        <% if current_user && verify_instructor(@course, current_user)%>
          <%= link_to 'Destroy', [@course, task.lesson, task],
                    method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-outline-info btn-sm'%>
          <%#= link_to 'status', change_status_course_lesson_tasks_path(@course, @lesson, task_id: @lesson.tasks.ids) %>

          <% end %>
      </div>
    </div>
  </div>
<% end %>
