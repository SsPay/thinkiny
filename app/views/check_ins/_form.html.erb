<div class="container-fluid">
  <%= form_with(model: [:course, :lesson, @check_in] ) do |form| %>
    <div class="row field mt-3">
      <div class="col-2"><%= form.label :note %></div>
      <div class="col-8"><%= form.text_field :note, class: "form-control" %></div>
      <div class="col-2"><%= form.submit "Save", class: "btn btn-outline-dark btn-sm" %></div>
    </div>
  <% end %>
</div>
