<%= form_with model: @user do |form| %>
  <div class="offset-sm-3 mt-4">
    <% if user.errors.any? %>
      <div class="alert alert-danger">
        <ul>
          <% user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
  <div class="row mt-5" >
    <div class="col-sm-5 offset-sm-1">
      <div class="form-group row"  >
        <%= form.label :first_name, class:"col-sm-3 col-form-label" %>
        <div class="col-sm-6">
          <%= form.text_field :first_name, class:"form-control" %>
        </div>
      </div>
      <div class="form-group row"  >
        <%= form.label :last_name, class:"col-sm-3 col-form-label" %>
        <div class="col-sm-6">
          <%= form.text_field :last_name, class:"form-control" %>
        </div>
      </div>
      <div class="form-group row"  >
        <%= form.label :email, class:"col-sm-3 col-form-label" %>
        <div class="col-sm-6">
          <%= form.email_field :email, class:"form-control" %>
        </div>
      </div>
    </div>
    <div class="col-sm-5 offset-sm-1">
      <div class="form-group row"  >
        <%= form.label :password, class:"col-sm-3 col-form-label" %>
        <div class="col-sm-6">
          <%= form.password_field :password, class:"form-control" %>
        </div>
      </div>
      <div class="form-group row"  >
        <%= form.label :password_confirmation, class:"col-sm-3 col-form-label" %>
        <div class="col-sm-6">
          <%= form.password_field :password_confirmation, class:"form-control" %>
        </div>
      </div>
      <div class="actions" style="padding-top: 15px">
        <div class="field">
          <%= form.label :picture %>
          <%= form.file_field :picture %>
        </div>
        <%= form.submit 'Sign up', class:"btn btn-outline-dark" %>
        <%= link_to 'back', root_path , class:"btn btn-outline-dark" , style:"margin-left: 10px;"%>
      </div>
    </div>
  </div>
<% end %>