<div class="container p-5">
  <h4 class="text-center">Sing up</h4>
  <%= form_with model: @user do |form| %>
    <div>
      <% if user.errors.any? %>
        <div class="alert alert-danger">
          <ul>
            <% user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>

    <div class="form-group row"  >
      <%= form.label :first_name, class:"col-sm-5" %>
      <div class="col-sm-7">
        <%= form.text_field :first_name, class:"form-control" %>
      </div>
    </div>

    <div class="form-group row"  >
      <%= form.label :last_name, class:"col-sm-5" %>
      <div class="col-sm-7">
        <%= form.text_field :last_name, class:"form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <span class="col-lg-5">email</span>
      <%#= form.label :email, class:"col-lg-5" %>
      <div class="col-sm-7">
        <%= form.email_field :email, class:"form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :password, class:"col-sm-5" %>
      <div class="col-sm-7">
        <%= form.password_field :password, class:"form-control" %>
      </div>
    </div>

    <div class="form-group row"  >
      <span class="col-sm-5">Password Confirmation </span>
      <%#= form.label :password_confirmation, class:"col-sm-5" %>
      <div class="col-sm-7">
        <%= form.password_field :password_confirmation, class:"form-control" %>
      </div>
    </div>

    <div class="field">
      <%= form.file_field :picture %>
    </div>

    <div class="actions pt-3">
      <%= form.submit 'Sign up', class:"btn btn-outline-dark btn-sm "%>
      <%= link_to 'back', root_path , class:"btn btn-outline-dark btn-sm ml-2"%>
    </div>
  <% end %>
</div>