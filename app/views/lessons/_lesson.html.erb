<div id="lesson__header">
  <div id="theme">Theme lesson <b>' <%= @lesson.theme %> '</b></div>
  <p id="lesson__pictures"><%= image_tag(@lesson.picture.url, width: 400) if @lesson.picture? %></p>

  <div  class="col-10 col-md-8" id="description"><%= @lesson.description %></div>
</div>
<div id="btn__lesson">
  <% if current_user && verify_instructor(@course, current_user) %>
    <%= link_to 'Відмітити присутніх', course_lesson_check_ins_path(course_id: @lesson.course.id, lesson_id: @lesson.id),
                remote: true,  'data-toggle': "modal", 'data-target':'#modal-window',
                class: "btn btn-outline-dark" %>
    <div class="modal fade" id="modal-window" tabindex="-1" role="dialog" aria-hidden="true">
      <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
        </div>
      </div>
    </div>
    <%= link_to "Редагувати урок", edit_course_lesson_path(@course, @lesson),  remote: true,  'data-toggle': "modal", 'data-target':'#modal-edit',
                class: "btn btn-outline-dark  " %>
    <div id="modal-edit" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content"></div>
      </div>
    </div>
    <%= link_to "Видалити урок", course_lesson_path(@course, @lesson),
                method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-dark" %>
    <%= link_to "Добавить задачу", new_course_lesson_task_path(@course, @lesson),  remote: true,
                class: "btn btn-outline-dark  " %>
  <% end %>
    <div class="task_list mt-5">
      <% @lesson.tasks.each do |task| %>
        <div class="mt-1 task_container col-10 offset-1">
          <h5 class="text-center"><%= task.title %> </h5>
          <div class="row">
            <div class="col-10 offset-1 task_body"><%= task.body %></div>
            <div class="col-1">
              <% if current_user && verify_instructor(@course, current_user)%>
                <%= link_to 'Destroy', [@course, task.lesson, task],
                            method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-outline-info btn-sm'%>
                <%= link_to 'status', course_lesson_task_change_status_path(@course, @lesson, task_id: @lesson.tasks.ids) %>

              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
</div>