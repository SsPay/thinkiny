<div class="container">
  <p class="text-center"><b><%= @lesson.theme.upcase %></b></p>
  <p class="text-center"><b><%= @lesson.time.strftime("%A") %></b></p>
  <p class="text-center"><small><%= @lesson.time %></small></p>
  <p class="text-center"><%= @lesson.description %></p>
  <p class="text-center">
  </p>
  <% if current_user && verify_instructor(@lesson.course, current_user) %>
    <%= link_to t("check_ins,check_ins"), course_lesson_check_ins_path(course_id: @lesson.course.id, lesson_id: @lesson.id) %>
    <%= link_to t("main.edit"), edit_course_lesson_path(@course, @lesson), class: "btn btn-outline-dark"  %>
    <%= link_to t("main.destroy"), course_lesson_path(@course, @lesson),
                method: :delete, data: { confirm: t("main.are_you_sure") }, class: "btn btn-outline-dark" %>
  <% end %>
  <%= link_to "Back", _back_url, class: "btn btn-outline-dark" %>
</div>
