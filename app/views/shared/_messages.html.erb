<div class="container-fluid" id="messages">
  <% if !notice.nil?  %>
    <p class="col-lg-12 ">
      <p class="alert alert-primary text-center" role="alert">
        <%= notice %>
      </p>
    </p>
  <% elsif !alert.nil? %>
    <p class="col-md-12">
      <p class="alert alert-danger text-center" role="alert">
        <%= alert %>
      </p>
    </p>
  <% end %>
</div>