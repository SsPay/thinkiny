<div class="offset-sm-2 mt-5">
  <%= form_with url: sessions_path, method: :post do |f| %>
    <div class="field">
      <%= f.label 'Email' %><br />
      <%= f.text_field :email, class:"form-control col-10" %>
    </div>
    <div class="field">
      <%= f.label 'Password' %><br />
      <%= f.password_field :password, class:"form-control col-10" %>
    </div>
    <div class="field mb-3">
      <%= check_box_tag :remember_me, 1 %>
      <%= label_tag :remember_me %>
    </div>
    <div class="actions">
      <%= f.submit 'Log in', class:"btn btn-outline-dark btn-sm" %>
      <%= link_to 'Sing up', new_user_path, class: "btn btn-outline-dark btn-sm" %>
    </div>
    <div class="actions">
      <%= link_to auth_at_provider_path(:provider => :facebook) do %>
        <i class="fab fa-facebook-f"></i>
      <% end %>
      <%= link_to auth_at_provider_path(provider: :google) do %>
        <i class="fab fa-google"></i>
    <% end %>
    </div>
    <p><%= link_to 'Forgot your password?', new_reset_password_path, class: 'nav-link' %></p>

<% end %>
</div>