<div class="offset-sm-2">
  <%= form_with url: sessions_path, method: :post do |f| %>
    <h4 class="offset-3 mt-4">LOGIN</h4>
    <div class="form-inline mb-3">
      <i class="fa fa-user mr-2"></i>
      <%= f.text_field :email, class:"form-control col-8", placeholder:"E-mail" %>
    </div>
    <div class="form-inline mb-3">
      <i class="fa fa-lock mr-2"></i>
      <%= f.password_field :password, class:"form-control col-8", placeholder:"Password" %>
    </div>
    <div class="form-inline mb-1">
      <%= check_box_tag :remember_me, 1 %>
      <%= label_tag :remember_me %>
    </div>
    <%= link_to 'Forgot your password?', new_reset_password_path, class: 'form_link' %>
    <div class="form-inline mt-2 mb-3">
      <%= f.submit 'Log in', class:"btn btn-outline-dark btn-sm mr-1" %>
      <%= link_to auth_at_provider_path(provider: :facebook), class:'btn btn-outline-dark btn-sm mr-1' do %>
        <i class="fab fa-facebook-f"></i>
      <% end %>
      <%= link_to auth_at_provider_path(provider: :google), class:'btn btn-outline-dark btn-sm mr-1' do %>
        <i class="fab fa-google"></i>
      <% end %>
    </div>
  <% end %>
</div>